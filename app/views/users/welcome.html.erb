<p id='notice' > <%= notice %> </p>
<% if  @logged_in_user%>
  <h5> <%= "Welcome, #{@logged_in_user.name}!" %> </h5> <br>
  <%= button_to "Logout", logout_path, method: 'get' %>
<% else %>
  <%= button_to "Log In", new_session_path, method: 'get' %> <br>
<% end %>
